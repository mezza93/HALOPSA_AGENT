// ===========================================
// HaloPSA AI Web Application - Database Schema
// ===========================================
// Multi-tenant architecture with user management,
// HaloPSA connections, chat history, and admin features

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===========================================
// User & Authentication
// ===========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials auth (null for OAuth)

  // User role for admin features
  role          UserRole  @default(USER)

  // Subscription/usage tracking
  plan          Plan      @default(FREE)
  monthlyTokens Int       @default(0)
  tokenResetAt  DateTime?

  // Status
  isActive      Boolean   @default(true)
  lastLoginAt   DateTime?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  connections   HaloConnection[]
  chatSessions  ChatSession[]
  auditLogs     AuditLog[]

  @@index([email])
  @@index([role])
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

// OAuth Accounts (NextAuth.js)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// Sessions (NextAuth.js)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Email Verification Tokens
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===========================================
// HaloPSA Connections (Multi-Tenant)
// ===========================================

model HaloConnection {
  id            String    @id @default(cuid())
  userId        String

  // Connection details
  name          String    // User-friendly name: "My Company HaloPSA"
  baseUrl       String    // https://company.halopsa.com
  clientId      String    @db.Text // Encrypted
  clientSecret  String    @db.Text // Encrypted
  tenant        String?   // Optional tenant for hosted solutions

  // Connection status
  isActive      Boolean   @default(true)
  isDefault     Boolean   @default(false)
  lastTestedAt  DateTime?
  lastUsedAt    DateTime?
  testStatus    ConnectionStatus @default(PENDING)
  testMessage   String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatSessions  ChatSession[]
  auditLogs     AuditLog[]

  @@index([userId])
  @@index([isActive])
}

enum ConnectionStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED
}

// ===========================================
// Chat & Conversations
// ===========================================

model ChatSession {
  id            String    @id @default(cuid())
  userId        String
  connectionId  String?   // Which HaloPSA instance (optional for general chat)

  // Session info
  title         String?   // Auto-generated or user-set title
  isArchived    Boolean   @default(false)
  isPinned      Boolean   @default(false)

  // Token usage for this session
  tokensUsed    Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastMessageAt DateTime  @default(now())

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection    HaloConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)
  messages      ChatMessage[]

  @@index([userId])
  @@index([connectionId])
  @@index([lastMessageAt])
}

model ChatMessage {
  id            String    @id @default(cuid())
  sessionId     String

  // Message content
  role          MessageRole
  content       String    @db.Text

  // For tool calls
  toolCalls     Json?     // Array of tool call objects
  toolResults   Json?     // Array of tool result objects

  // Attachments (images, files)
  attachments   ChatAttachment[]

  // Token usage
  inputTokens   Int       @default(0)
  outputTokens  Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())

  // Relations
  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
  TOOL
}

model ChatAttachment {
  id            String    @id @default(cuid())
  messageId     String

  // File info
  fileName      String
  fileType      String    // MIME type
  fileSize      Int       // Bytes
  storageUrl    String    // URL to stored file

  // For images: thumbnail and analysis
  thumbnailUrl  String?
  altText       String?   // AI-generated description

  // Timestamps
  createdAt     DateTime  @default(now())

  // Relations
  message       ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

// ===========================================
// Admin & Audit
// ===========================================

model AuditLog {
  id            String    @id @default(cuid())
  userId        String?
  connectionId  String?

  // Action details
  action        String    // e.g., "user.login", "halopsa.ticket.create"
  resource      String?   // e.g., "ticket", "client"
  resourceId    String?   // ID of the affected resource

  // Request details
  ipAddress     String?
  userAgent     String?

  // Metadata
  metadata      Json?     // Additional context
  status        AuditStatus @default(SUCCESS)
  errorMessage  String?

  // Timestamps
  createdAt     DateTime  @default(now())

  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  connection    HaloConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([connectionId])
  @@index([action])
  @@index([createdAt])
}

enum AuditStatus {
  SUCCESS
  FAILURE
  WARNING
}

// ===========================================
// System Configuration
// ===========================================

model SystemConfig {
  id            String    @id @default(cuid())
  key           String    @unique
  value         String    @db.Text
  description   String?
  isPublic      Boolean   @default(false) // Can be exposed to frontend

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([key])
}

// ===========================================
// Usage & Analytics
// ===========================================

model UsageRecord {
  id            String    @id @default(cuid())
  userId        String

  // Usage period
  periodStart   DateTime
  periodEnd     DateTime

  // Token counts
  inputTokens   Int       @default(0)
  outputTokens  Int       @default(0)

  // Request counts
  chatRequests  Int       @default(0)
  apiRequests   Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())

  @@unique([userId, periodStart])
  @@index([userId])
  @@index([periodStart])
}
