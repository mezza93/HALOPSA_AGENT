// ===========================================
// HaloPSA AI Web Application - Database Schema
// ===========================================
// Multi-tenant architecture with user management,
// HaloPSA connections, chat history, and admin features

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===========================================
// User & Authentication
// ===========================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials auth (null for OAuth)

  // User role for admin features
  role          UserRole  @default(USER)

  // Subscription/usage tracking
  plan          Plan      @default(FREE)
  monthlyTokens Int       @default(0)
  tokenResetAt  DateTime?

  // Branding customization
  brandPrimaryColor   String?   // Primary color in hex (e.g., "#14b8a6")
  brandSecondaryColor String?   // Secondary color in hex (e.g., "#0d9488")
  brandReportNaming   String?   // Naming schema for reports (e.g., "{company} - {type} - {date}")
  brandLogoUrl        String?   // URL to uploaded logo

  // Status
  isActive      Boolean   @default(true)
  lastLoginAt   DateTime?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts             Account[]
  sessions             Session[]
  connections          HaloConnection[]
  chatSessions         ChatSession[]
  auditLogs            AuditLog[]
  automationRules      AutomationRule[]
  conversationMemories ConversationMemory[]
  notebookEntries      NotebookEntry[]
  conversationSummaries ConversationSummary[]
  apiKeys              ApiKey[]

  @@index([email])
  @@index([role])
}

// ===========================================
// API Keys & Token Limits
// ===========================================

model ApiKey {
  id                String    @id @default(cuid())
  userId            String

  // Key identification (we store hash, not the raw key)
  keyPrefix         String    // First 8 chars for identification (e.g., "halo_abc1")
  keyHash           String    @unique // SHA-256 hash of the full key
  name              String?   // User-friendly name for the key

  // Token limits
  monthlyTokenLimit Int       @default(1000000) // 1 million tokens default
  tokensUsed        Int       @default(0)       // Current month's usage
  tokenResetAt      DateTime                    // When tokens reset (monthly)

  // Rate limiting
  requestsPerMinute Int       @default(60)      // Rate limit
  lastRequestAt     DateTime?

  // Status
  isActive          Boolean   @default(true)
  revokedAt         DateTime?
  revokedReason     String?

  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastUsedAt        DateTime?

  // Relations
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([keyPrefix])
  @@index([isActive])
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
  UNLIMITED   // For testing/special accounts - no token limits
}

// OAuth Accounts (NextAuth.js)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// Sessions (NextAuth.js)
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Email Verification Tokens
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ===========================================
// HaloPSA Connections (Multi-Tenant)
// ===========================================

model HaloConnection {
  id            String    @id @default(cuid())
  userId        String

  // Connection details
  name          String    // User-friendly name: "My Company HaloPSA"
  baseUrl       String    // https://company.halopsa.com
  clientId      String    @db.Text // Encrypted
  clientSecret  String    @db.Text // Encrypted
  tenant        String?   // Optional tenant for hosted solutions

  // Connection status
  isActive      Boolean   @default(true)
  isDefault     Boolean   @default(false)
  lastTestedAt  DateTime?
  lastUsedAt    DateTime?
  testStatus    ConnectionStatus @default(PENDING)
  testMessage   String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatSessions     ChatSession[]
  auditLogs        AuditLog[]
  automationRules  AutomationRule[]

  @@index([userId])
  @@index([isActive])
  @@index([userId, isDefault])  // Optimizes finding user's default connection
}

enum ConnectionStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED
}

// ===========================================
// Chat & Conversations
// ===========================================

model ChatSession {
  id            String    @id @default(cuid())
  userId        String
  connectionId  String?   // Which HaloPSA instance (optional for general chat)

  // Session info
  title         String?   // Auto-generated or user-set title
  isArchived    Boolean   @default(false)
  isPinned      Boolean   @default(false)

  // Token usage for this session
  tokensUsed    Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastMessageAt DateTime  @default(now())

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection    HaloConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)
  messages      ChatMessage[]
  summary       ConversationSummary?

  @@index([userId])
  @@index([connectionId])
  @@index([lastMessageAt])
  @@index([userId, isArchived])  // Optimizes history page queries
  @@index([userId, lastMessageAt])  // Optimizes sorted user sessions
}

model ChatMessage {
  id            String    @id @default(cuid())
  sessionId     String

  // Message content
  role          MessageRole
  content       String    @db.Text

  // For tool calls
  toolCalls     Json?     // Array of tool call objects
  toolResults   Json?     // Array of tool result objects

  // Attachments (images, files)
  attachments   ChatAttachment[]

  // Token usage
  inputTokens   Int       @default(0)
  outputTokens  Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())

  // Relations
  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
  TOOL
}

model ChatAttachment {
  id            String    @id @default(cuid())
  messageId     String

  // File info
  fileName      String
  fileType      String    // MIME type
  fileSize      Int       // Bytes
  storageUrl    String    // URL to stored file

  // For images: thumbnail and analysis
  thumbnailUrl  String?
  altText       String?   // AI-generated description

  // Timestamps
  createdAt     DateTime  @default(now())

  // Relations
  message       ChatMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

// ===========================================
// Admin & Audit
// ===========================================

model AuditLog {
  id            String    @id @default(cuid())
  userId        String?
  connectionId  String?

  // Action details
  action        String    // e.g., "user.login", "halopsa.ticket.create"
  resource      String?   // e.g., "ticket", "client"
  resourceId    String?   // ID of the affected resource

  // Request details
  ipAddress     String?
  userAgent     String?

  // Metadata
  metadata      Json?     // Additional context
  status        AuditStatus @default(SUCCESS)
  errorMessage  String?

  // Timestamps
  createdAt     DateTime  @default(now())

  // Relations
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  connection    HaloConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([connectionId])
  @@index([action])
  @@index([createdAt])
}

enum AuditStatus {
  SUCCESS
  FAILURE
  WARNING
}

// ===========================================
// System Configuration
// ===========================================

model SystemConfig {
  id            String    @id @default(cuid())
  key           String    @unique
  value         String    @db.Text
  description   String?
  isPublic      Boolean   @default(false) // Can be exposed to frontend

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([key])
}

// ===========================================
// Usage & Analytics
// ===========================================

model UsageRecord {
  id            String    @id @default(cuid())
  userId        String

  // Usage period
  periodStart   DateTime
  periodEnd     DateTime

  // Token counts
  inputTokens   Int       @default(0)
  outputTokens  Int       @default(0)

  // Request counts
  chatRequests  Int       @default(0)
  apiRequests   Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())

  @@unique([userId, periodStart])
  @@index([userId])
  @@index([periodStart])
}

// ===========================================
// Knowledge Base (Local Cache)
// ===========================================

// Stores synced HaloPSA configuration and data for AI context
model KnowledgeBaseItem {
  id            String    @id @default(cuid())
  userId        String

  // Item categorization
  category      KBCategory
  subcategory   String?   // e.g., "ticket_types", "priorities", etc.

  // Content
  title         String
  content       String    @db.Text  // JSON or markdown content
  summary       String?   // Brief summary for AI context

  // Metadata
  sourceId      String?   // ID from HaloPSA
  sourceName    String?   // Original name from HaloPSA
  metadata      Json?     // Additional structured data

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([category])
  @@index([userId, category])
}

enum KBCategory {
  CONFIGURATION    // Ticket types, statuses, priorities, categories
  CLIENTS          // Client/customer information
  AGENTS           // Team structure, agent info
  WORKFLOWS        // Automation rules, escalations
  TEMPLATES        // Email and ticket templates
  CONTRACTS        // Contract types, SLA definitions
  CUSTOM_FIELDS    // Custom field definitions
  INTEGRATIONS     // Connected systems, webhooks
  BEST_PRACTICES   // User-defined best practices
}

// Tracks sync operations
model KnowledgeBaseSync {
  id            String    @id @default(cuid())
  userId        String

  // Sync status
  status        SyncStatus  @default(PENDING)
  syncType      String      // "full", "incremental", "manual"

  // Results
  itemsAdded    Int         @default(0)
  itemsUpdated  Int         @default(0)
  itemsRemoved  Int         @default(0)
  errorCount    Int         @default(0)
  errors        Json?       // Array of error messages

  // Timing
  startedAt     DateTime    @default(now())
  completedAt   DateTime?
  syncedAt      DateTime    @default(now())

  @@index([userId])
  @@index([syncedAt])
}

enum SyncStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  PARTIAL
}

// ===========================================
// Automation Rules (Natural Language)
// ===========================================

model AutomationRule {
  id            String    @id @default(cuid())
  userId        String
  connectionId  String?

  // Rule definition (natural language)
  name          String              // User-friendly name
  description   String    @db.Text  // Natural language description

  // Parsed rule components
  triggerType   TriggerType         // What triggers the rule
  triggerConfig Json                // Trigger-specific configuration
  actionType    ActionType          // What action to perform
  actionConfig  Json                // Action-specific configuration

  // Conditions (parsed from natural language)
  conditions    Json?               // Array of condition objects

  // Status
  isActive      Boolean   @default(true)
  isPaused      Boolean   @default(false)

  // Execution stats
  executionCount Int      @default(0)
  lastExecutedAt DateTime?
  lastErrorAt   DateTime?
  lastError     String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  connection    HaloConnection? @relation(fields: [connectionId], references: [id], onDelete: SetNull)
  executions    AutomationExecution[]

  @@index([userId])
  @@index([connectionId])
  @@index([isActive])
  @@index([triggerType])
  @@index([userId, isActive])  // Optimizes fetching user's active rules
}

enum TriggerType {
  TICKET_CREATED       // When a new ticket is created
  TICKET_UPDATED       // When a ticket is updated
  TICKET_STATUS_CHANGED // When ticket status changes
  TICKET_ASSIGNED      // When ticket is assigned
  TICKET_PRIORITY_CHANGED // When priority changes
  SLA_BREACH_WARNING   // Before SLA breach
  SLA_BREACHED         // When SLA is breached
  SCHEDULED            // Time-based trigger
  MANUAL               // Manually triggered
}

enum ActionType {
  ASSIGN_TICKET        // Assign to agent/team
  CHANGE_PRIORITY      // Change ticket priority
  CHANGE_STATUS        // Change ticket status
  ADD_NOTE             // Add a note to ticket
  SEND_NOTIFICATION    // Send email/notification
  ADD_TAG              // Add tag/category
  ESCALATE             // Escalate the ticket
  CREATE_TASK          // Create a task
  WEBHOOK              // Call external webhook
}

model AutomationExecution {
  id            String    @id @default(cuid())
  ruleId        String

  // Execution details
  triggerId     String?   // ID of the triggering entity (ticket, etc.)
  triggerData   Json?     // Data that triggered the rule

  // Result
  status        ExecutionStatus @default(PENDING)
  result        Json?           // Result data
  errorMessage  String?

  // Timing
  startedAt     DateTime  @default(now())
  completedAt   DateTime?

  // Relations
  rule          AutomationRule @relation(fields: [ruleId], references: [id], onDelete: Cascade)

  @@index([ruleId])
  @@index([status])
  @@index([startedAt])
}

enum ExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
  SKIPPED
}

// ===========================================
// Conversation Memory & Context
// ===========================================

// Stores important context from conversations for cross-session memory
model ConversationMemory {
  id            String    @id @default(cuid())
  userId        String

  // Entity reference (what this memory is about)
  entityType    EntityType        // client, ticket, agent, asset, etc.
  entityId      String?           // HaloPSA ID if applicable
  entityName    String            // Human-readable name

  // Memory content
  summary       String    @db.Text  // What was discussed/learned
  keyFacts      Json?               // Structured facts about the entity
  sentiment     String?             // positive, neutral, negative
  importance    Int       @default(5) // 1-10 importance score

  // Source tracking
  sessionId     String?           // Which chat session this came from

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastAccessedAt DateTime @default(now())

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entityType])
  @@index([entityName])
  @@index([userId, entityType])
  @@index([lastAccessedAt])
}

enum EntityType {
  CLIENT
  TICKET
  AGENT
  ASSET
  CONTRACT
  PROJECT
  REPORT
  GENERAL
}

// User's notebook for saving important findings
model NotebookEntry {
  id            String    @id @default(cuid())
  userId        String

  // Entry content
  title         String              // Short title
  content       String    @db.Text  // Full content (markdown supported)
  category      String?             // User-defined category
  tags          String[]            // Array of tags for searching

  // Related entities
  relatedEntities Json?             // Array of {type, id, name}

  // Source tracking
  sessionId     String?             // Which chat session this came from
  messageExcerpt String?  @db.Text  // The AI response that was saved

  // Organization
  isPinned      Boolean   @default(false)
  isArchived    Boolean   @default(false)
  color         String?             // For visual organization

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
  @@index([isPinned])
  @@index([createdAt])
}

// Tracks conversation summaries for context continuity
model ConversationSummary {
  id            String    @id @default(cuid())
  sessionId     String    @unique
  userId        String

  // Summary content
  title         String              // Auto-generated title
  summary       String    @db.Text  // Summary of the conversation
  topics        String[]            // Main topics discussed
  entitiesMentioned Json?           // Clients, tickets, etc. mentioned

  // Key outcomes
  actionsPerformed Json?            // What was created/updated
  questionsAsked   Json?            // Key questions the user asked
  insightsProvided Json?            // Key insights provided

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
